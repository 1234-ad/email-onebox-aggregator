          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product\": \"Email Onebox Aggregator\",\n  \"agenda\": \"I am applying for a job position. If the lead is interested, share the meeting booking link.\",\n  \"meetingLink\": \"https://cal.com/example\",\n  \"additionalInfo\": \"Available for technical interviews on weekdays\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/ai/context",
              "host": ["{{base_url}}"],
              "path": ["api", "ai", "context"]
            }
          }
        },
        {
